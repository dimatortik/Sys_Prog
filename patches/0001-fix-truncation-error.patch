 calculator.cpp | 1 +
 1 file changed, 1 insertion(+)

diff --git a/calculator.cpp b/calculator.cpp
index b91afea..cc127e4 100644
--- a/calculator.cpp
+++ b/calculator.cpp
@@ -2,6 +2,7 @@
 
 int Calculator::Add (double a, double b)
 {
+    
     return a + b;
 }
 
